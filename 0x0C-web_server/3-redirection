#!/usr/bin/env bash
# Configure your Nginx server so that /redirect_me is redirecting to
# another pagei.
# Install necessary packages e.g. nginx
# Allow HTTP requests by updatin firewall rule.

sudo apt-get -y update
sudo apt-get -y nginx
sudo ufw allow 'Nginx HTTP'
echo "Hello World" | sudo tee /var/www/html/index.html
sudo sed -i 's/listen 80 default_server/a rewrite ^/redirect_me https://www.youtube.com/ permanent;' /etc/nginx/sites-available/default
sudo service nginx start
